<?xml version="1.0" encoding="UTF-8"?>
<!-- Log4j2 configuration file to define log levels, appenders, and layouts. -->
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender: Sends logs to the console. -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <!-- PatternLayout defines the format of the log messages. -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File Appender: Writes logs to a file named 'test_automation.log'. -->
        <File name="FileAppender" fileName="logs/test_automation.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Root Logger: The default logger for all messages. -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>

        <!-- Our custom logger for the project package. -->
        <!-- We set the level to "debug" to get more detailed information for our framework. -->
        <Logger name="org.example" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>
    </Loggers>
</Configuration>
